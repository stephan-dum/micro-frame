{
  "compilerOptions": {
    "module": "ES2020",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports" : true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es6",
    "lib" : [
      "dom",
      "es2015"
    ],
    "allowJs": true,
    "moduleResolution": "node",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  }
}
